<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/layout_boxers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:paddingTop="16dp"
        android:text="All Round - Points"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_boxers"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:paddingTop="16dp"
                android:text="Boxer 1"
                android:textAllCaps="true"
                android:textColor="#616161"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:paddingBottom="24dp"
                android:paddingTop="16dp"
                android:text="0"
                android:textAllCaps="true"
                android:textSize="56sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="threepointsA"
                android:paddingBottom="8dp"
                android:text="10 - 9"
                android:textColor="#000000" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="twopointsA"
                android:text="Foul"
                android:textColor="#000000" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="freethrowA"
                android:paddingTop="8dp"
                android:text="Knockdown"
                android:textColor="#000000" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="freethrowA"
                android:paddingTop="8dp"
                android:text="Knockout"
                android:textColor="#000000" />


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:paddingTop="16dp"
                android:text="Boxer 2"
                android:textAllCaps="true"
                android:textColor="#616161"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:paddingBottom="24dp"
                android:paddingTop="16dp"
                android:text="0"
                android:textAllCaps="true"
                android:textSize="56sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="threepointsB"
                android:paddingBottom="8dp"
                android:text="10 - 9"
                android:textColor="#000000" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="twopointsB"
                android:text="Foul"
                android:textColor="#000000" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="freethrowB"
                android:paddingTop="8dp"
                android:text="Knockdown"
                android:textColor="#000000" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="freethrowB"
                android:paddingTop="8dp"
                android:text="Knockout"
                android:textColor="#000000" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textview_Declare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_declare"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="24dp"
        android:text="Declare"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/layout_declare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/end_game_button"
        android:background="#61616161"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_draw"
            android:layout_width="157dp"
            android:layout_height="48dp"
            android:layout_above="@+id/image_holder"
            android:layout_marginLeft="24dp"
            android:onClick="freethrowB"
            android:text="Draw"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button_no_context"
            android:layout_width="157dp"
            android:layout_height="48dp"
            android:layout_below="@+id/button_draw"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:onClick="freethrowB"
            android:text="No Contest"
            android:textColor="#000000" />

    </LinearLayout>

    <Button
        android:id="@+id/end_game_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_above="@+id/textview_status"
        android:layout_centerHorizontal="true"
        android:onClick="reset"
        android:text="End Game"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textview_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif-medium"
        android:paddingTop="16dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#616161"
        android:textSize="14sp" />

</RelativeLayout>
